<body translate="no" >
  <div id="yearWord" >Year</div> 
<div id="myClock">0:0:00</div>
<div id="dateWord" >Date</div> 
<div id="myDate" >0.0:00</div> 
<div id="timeWord" >Time</div> 
<div id="myTime" >0.0:00</div>
  
  
      <script id="rendered-js" >
function updateYear(){
  var d = new Date();
var n = d.getFullYear();

  let element = document.getElementById("myClock");
  element.textContent = n;
}
function updateDate(){
  var d = new Date();
var n = d.getDate();

  let element = document.getElementById("myDate");
  element.textContent = n;
}

function updateTime(){
  var d = new Date();
var n = d.toLocaleTimeString();

  let element = document.getElementById("myTime");
  element.textContent = n;
}

updateYear();
setInterval(updateYear,1000);
updateDate();
setInterval(updateDate,1000);
updateTime();
setInterval(updateTime,10);
    </script>

  

